<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" stylesheets="@../css/style.css" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airbooks.controller.ISBNSearchController">
    <top>
        <FlowPane alignment="CENTER"
                  style="-fx-border-color: black; -fx-border-width: 0 0 1 0; -fx-background-color: lightcyan;"
                  BorderPane.alignment="CENTER">
            <Label text="AirBooks - Book Control Panel">
                <font>
                    <Font size="18.0"/>
                </font>
                <FlowPane.margin>
                    <Insets bottom="3.0" top="3.0"/>
                </FlowPane.margin>
            </Label>
        </FlowPane>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER"/>
                    <ColumnConstraints hgrow="NEVER"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <TextField fx:id="ISBNTF" GridPane.columnIndex="1" GridPane.halignment="LEFT">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0"/>
                    </GridPane.margin>
                </TextField>
                <Label text="ISBN (no hyphen)" GridPane.halignment="RIGHT">
                    <GridPane.margin>
                        <Insets left="10.0" right="10.0"/>
                    </GridPane.margin>
                </Label>
            </GridPane>
            <Button mnemonicParsing="false" onAction="#searchAction" text="Search">
                <VBox.margin>
                    <Insets bottom="10.0" top="15.0"/>
                </VBox.margin>
            </Button>
            <VBox fx:id="bookInfoVBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                  prefHeight="50.0" prefWidth="600.0" style="-fx-border-color: black; -fx-background-color: white;"
                  visible="false">
                <Label fx:id="bookNameLabel" alignment="CENTER" text="Book1">
                    <VBox.margin>
                        <Insets bottom="2.0"/>
                    </VBox.margin>
                </Label>
                <FlowPane alignment="CENTER">
                    <Label fx:id="subjectCodeLabel" text="MA" textFill="DARKGRAY">
                        <FlowPane.margin>
                            <Insets right="15.0"/>
                        </FlowPane.margin>
                    </Label>
                    <Label fx:id="ISBNLabel" alignment="TOP_CENTER" text="ISBN 978-92-95055-02-5"
                           textFill="DARKGRAY">
                        <FlowPane.margin>
                            <Insets right="15.0"/>
                        </FlowPane.margin>
                    </Label>
                    <Label fx:id="rentalInfoLabel" text="Available - $14.00, 14 days" textFill="DARKGRAY">
                        <FlowPane.margin>
                            <Insets/>
                        </FlowPane.margin>
                    </Label>
                </FlowPane>
            </VBox>
            <FlowPane alignment="CENTER">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
                <Button fx:id="returnBookButton" disable="true" mnemonicParsing="false" onAction="#returnBookAction"
                        text="Return Book" visible="false">
                    <FlowPane.margin>
                        <Insets right="5.0"/>
                    </FlowPane.margin>
                </Button>
                <Button fx:id="doneButton" disable="true" mnemonicParsing="false" onAction="#closeAction"
                        text="Done" visible="false"/>
            </FlowPane>
        </VBox>
    </center>
    <bottom>
        <AnchorPane style="-fx-border-color: black; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <Label text="Â© NUS High School of Math and Science" AnchorPane.bottomAnchor="2.0"
                   AnchorPane.leftAnchor="3.0" AnchorPane.topAnchor="2.0"/>
            <Hyperlink onAction="#aboutAction" text="About the Programmer..." AnchorPane.bottomAnchor="0.0"
                       AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </bottom>
</BorderPane>
